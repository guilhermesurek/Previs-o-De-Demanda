Function Inicialização()
    'Esta função irá travar a tela do excel, mudar o cursor para em processamento e
    'mostrar o userForm ufProcessamento, indicando como está indo o processamento.
    Application.StatusBar = "Iniciando processamento..."
End Function
Function Finalização()
    'Esta função irá destravar a tela do excel, voltar o curso para o normal e encerrar
    Application.StatusBar = False
End Function
Function AttProcessamento(ByVal atual As Integer, ByVal total As Integer)
    'Esta função irá atualizar o userForm ufProcessamento
    Application.StatusBar = "Processando... " & Format(atual / total, "0.0%") & " Concluído"
End Function
Function ConvColNum(ByVal col As String) As Integer
    'Esta função irá receber uma letra de coluna (String) e irá retornar seu correspon-
    'dente em número (Inteiro).
    
    Select Case col
        Case "A"
            ConvColNum = 1
            Exit Function
        Case "B"
            ConvColNum = 2
            Exit Function
        Case "C"
            ConvColNum = 3
            Exit Function
        Case "D"
            ConvColNum = 4
            Exit Function
        Case "E"
            ConvColNum = 5
            Exit Function
        Case "F"
            ConvColNum = 6
            Exit Function
        Case "G"
            ConvColNum = 7
            Exit Function
        Case "H"
            ConvColNum = 8
            Exit Function
        Case "I"
            ConvColNum = 9
            Exit Function
        Case "J"
            ConvColNum = 10
            Exit Function
        Case "K"
            ConvColNum = 11
            Exit Function
        Case "L"
            ConvColNum = 12
            Exit Function
        Case "M"
            ConvColNum = 13
            Exit Function
        Case "N"
            ConvColNum = 14
            Exit Function
        Case "O"
            ConvColNum = 15
            Exit Function
        Case "P"
            ConvColNum = 16
            Exit Function
        Case "Q"
            ConvColNum = 17
            Exit Function
        Case "R"
            ConvColNum = 18
            Exit Function
        Case "S"
            ConvColNum = 19
            Exit Function
        Case "T"
            ConvColNum = 20
            Exit Function
        Case "U"
            ConvColNum = 21
            Exit Function
        Case "V"
            ConvColNum = 22
            Exit Function
        Case "W"
            ConvColNum = 23
            Exit Function
        Case "X"
            ConvColNum = 24
            Exit Function
        Case "Y"
            ConvColNum = 25
            Exit Function
        Case "Z"
            ConvColNum = 26
            Exit Function
        Case "AA"
            ConvColNum = 27
            Exit Function
        Case "AB"
            ConvColNum = 28
            Exit Function
        Case "AC"
            ConvColNum = 29
            Exit Function
        Case "AD"
            ConvColNum = 30
            Exit Function
        Case "AE"
            ConvColNum = 31
            Exit Function
        Case "AF"
            ConvColNum = 32
            Exit Function
        Case "AG"
            ConvColNum = 33
            Exit Function
        Case "AH"
            ConvColNum = 34
            Exit Function
        Case "AI"
            ConvColNum = 35
            Exit Function
        Case "AJ"
            ConvColNum = 36
            Exit Function
        Case "AK"
            ConvColNum = 37
            Exit Function
        Case "AL"
            ConvColNum = 38
            Exit Function
        Case "AM"
            ConvColNum = 39
            Exit Function
        Case "AN"
            ConvColNum = 40
            Exit Function
        Case "AO"
            ConvColNum = 41
            Exit Function
        Case "AP"
            ConvColNum = 42
            Exit Function
        Case "AQ"
            ConvColNum = 43
            Exit Function
        Case "AR"
            ConvColNum = 44
            Exit Function
        Case "AS"
            ConvColNum = 45
            Exit Function
        Case "AT"
            ConvColNum = 46
            Exit Function
        Case "AU"
            ConvColNum = 47
            Exit Function
        Case "AV"
            ConvColNum = 48
            Exit Function
        Case "AW"
            ConvColNum = 49
            Exit Function
        Case "AX"
            ConvColNum = 50
            Exit Function
        Case "AY"
            ConvColNum = 51
            Exit Function
        Case "AZ"
            ConvColNum = 52
            Exit Function
        Case Else
            ConvColNum = "Indefinido"
            Exit Function
    End Select
End Function
